<Window x:Class="HotkeyLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:HotkeyLauncher.Converters"
        mc:Ignorable="d"
        Title="HotkeyLauncher" Height="628" Width="780"
        MinHeight="628" MinWidth="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="#1e1e1e">

    <Window.Resources>
        <!-- Converters -->
        <converters:PathToIconConverter x:Key="PathToIconConverter"/>

        <!-- Colors -->
        <Color x:Key="PrimaryColor">#0078d4</Color>
        <Color x:Key="PrimaryHoverColor">#1084d8</Color>
        <Color x:Key="BackgroundColor">#1e1e1e</Color>
        <Color x:Key="SurfaceColor">#2d2d2d</Color>
        <Color x:Key="SurfaceHoverColor">#3d3d3d</Color>
        <Color x:Key="BorderColor">#404040</Color>
        <Color x:Key="TextColor">#ffffff</Color>
        <Color x:Key="TextSecondaryColor">#a0a0a0</Color>
        <Color x:Key="DangerColor">#f05545</Color>
        <Color x:Key="DangerHoverColor">#ff6659</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource PrimaryHoverColor}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource SurfaceHoverColor}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <SolidColorBrush Color="{StaticResource DangerColor}"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="{StaticResource DangerColor}"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource DangerColor}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small Button Style -->
        <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinWidth" Value="36"/>
        </Style>

        <!-- ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer Padding="{TemplateBinding Padding}">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBoxItem Style -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border" Background="Transparent"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3a3a3a"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0078d4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="HotkeyLauncher" FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"/>
            <TextBlock Text="Configure global hotkeys to launch applications"
                       FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="200"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Hotkey List -->
            <Grid Grid.Column="0" Margin="0,0,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Registered Hotkeys" FontSize="13" FontWeight="SemiBold"
                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>

                <ListBox x:Name="HotkeyListBox" Grid.Row="1"
                         SelectionChanged="HotkeyListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0" Width="24" Height="24" Margin="0,0,10,0"
                                       Source="{Binding ApplicationPath, Converter={StaticResource PathToIconConverter}}"
                                       VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock Text="{Binding ApplicationPath}" FontSize="11"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                </StackPanel>
                                <Border Grid.Column="2" Background="#404040" CornerRadius="4"
                                        Padding="8,4" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding HotkeyDisplayText}" FontSize="12"
                                               FontFamily="Consolas" Foreground="{StaticResource TextBrush}"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Edit Panel -->
            <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8" Padding="16" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <StackPanel VerticalAlignment="Top">
                    <TextBlock Text="Hotkey Details" FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"/>

                    <StackPanel>
                        <TextBlock Text="Name" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <TextBox x:Name="NameTextBox" Margin="0,0,0,8"/>

                        <TextBlock Text="Hotkey" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="HotkeyTextBox" Grid.Column="0" IsReadOnly="True"
                                     PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                                     GotFocus="HotkeyTextBox_GotFocus"
                                     LostFocus="HotkeyTextBox_LostFocus"/>
                            <Button x:Name="ClearHotkeyButton" Grid.Column="1" Content="Clear"
                                    Style="{StaticResource SmallButton}" Margin="6,0,0,0"
                                    Click="ClearHotkeyButton_Click"/>
                        </Grid>

                        <TextBlock Text="Application Path" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="PathTextBox" Grid.Column="0"/>
                            <Button x:Name="BrowseButton" Grid.Column="1" Content="..."
                                    Style="{StaticResource SmallButton}" Margin="6,0,0,0"
                                    Click="BrowseButton_Click"/>
                        </Grid>

                        <TextBlock Text="Arguments" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <TextBox x:Name="ArgumentsTextBox" Margin="0,0,0,8"/>

                        <TextBlock Text="Working Directory" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="WorkingDirTextBox" Grid.Column="0"/>
                            <Button x:Name="BrowseDirButton" Grid.Column="1" Content="..."
                                    Style="{StaticResource SmallButton}" Margin="6,0,0,0"
                                    Click="BrowseDirButton_Click"/>
                        </Grid>

                        <CheckBox x:Name="RunAsAdminCheckBox" Content="Run as administrator"
                                  Foreground="{StaticResource TextBrush}" FontSize="12"/>
                    </StackPanel>

                    <StackPanel Margin="0,12,0,0">
                        <!-- Add mode buttons -->
                        <Button x:Name="AddButton" Content="Add New Hotkey"
                                Style="{StaticResource PrimaryButton}"
                                Click="AddButton_Click"/>

                        <!-- Edit mode buttons -->
                        <StackPanel x:Name="EditButtonsPanel" Visibility="Collapsed">
                            <Button x:Name="UpdateButton" Content="Update"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="UpdateButton_Click"/>
                            <Button x:Name="DeleteButton" Content="Delete"
                                    Style="{StaticResource DangerButton}" Margin="0,8,0,0"
                                    Click="DeleteButton_Click"/>
                            <Button x:Name="CancelButton" Content="Cancel"
                                    Style="{StaticResource SecondaryButton}" Margin="0,8,0,0"
                                    Click="CancelButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <CheckBox x:Name="StartWithWindowsCheckBox" Content="Start with Windows"
                              Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"
                              Checked="StartWithWindowsCheckBox_Changed"
                              Unchecked="StartWithWindowsCheckBox_Changed"/>
                    <TextBlock Text="Theme:" Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center" Margin="24,0,8,0"/>
                    <ComboBox x:Name="ThemeComboBox" Width="100"
                              SelectionChanged="ThemeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Dark" Tag="Dark"/>
                        <ComboBoxItem Content="Light" Tag="Light"/>
                    </ComboBox>
                </StackPanel>
                <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="11">
                    <Run Text="Settings:"/>
                    <Run x:Name="SettingsPathText" Text=""/>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                <Button x:Name="SaveButton" Content="Save Changes"
                        Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"
                        Click="SaveButton_Click"/>
                <Button x:Name="CloseButton" Content="Close"
                        Style="{StaticResource SecondaryButton}"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
